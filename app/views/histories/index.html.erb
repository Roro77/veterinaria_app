<p id="notice"><%= notice %></p>

<h1>Histories</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Description</th>
      <th>Pet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.date %></td>
        <td><%= history.weight %></td>
        <td><%= history.height %></td>
        <td><%= history.description %></td>
        <td><%= history.pet %></td>
        <td><%= link_to 'Show', [@pet, history] %></td>
        <td><%= link_to 'Edit', edit_pet_history_path(@pet, history) %></td>
        <td><%= link_to 'Destroy', [@pet, history], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New History', new_pet_history_path(@pet) %>
